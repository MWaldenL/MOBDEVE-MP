<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.activities.viewing.ProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_profile"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/bg4" />

        <ImageView
            android:id="@+id/iv_profile_logo"
            android:layout_width="120dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:srcCompat="@drawable/logo_dark" />

        <TextView
            android:id="@+id/tv_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/profile_name_placeholder"
            android:textAppearance="@style/TextAppearance.MOBDEVEMP.Headline4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_profile_logo" />

        <TextView
            android:id="@+id/tv_profile_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="32dp"
            android:text="@string/profile_date_label"
            android:textAppearance="@style/TextAppearance.MOBDEVEMP.BodyLarger"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_profile_name" />

        <TextView
            android:id="@+id/tv_profile_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="64dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/profile_date_placeholder"
            android:textAppearance="@style/TextAppearance.MOBDEVEMP.BodyLarger"
            android:textStyle="bold"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/tv_profile_date_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_profile_name" />

        <TextView
            android:id="@+id/tv_live_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="64dp"
            android:text="@string/count_placeholder"
            android:textAppearance="@style/TextAppearance.MOBDEVEMP.BodyLarger"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_profile_date" />

        <TextView
            android:id="@+id/tv_dead_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="64dp"
            android:text="@string/count_placeholder"
            android:textAppearance="@style/TextAppearance.MOBDEVEMP.BodyLarger"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_live_count" />

        <TextView
            android:id="@+id/tv_total_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="64dp"
            android:text="@string/count_placeholder"
            android:textAppearance="@style/TextAppearance.MOBDEVEMP.BodyLarger"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_dead_count" />

        <TextView
            android:id="@+id/tv_live_count_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="8dp"
            android:text="@string/live_count_label"
            android:textAppearance="@style/TextAppearance.MOBDEVEMP.BodyLarger"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_profile_date" />

        <TextView
            android:id="@+id/tv_dead_count_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="8dp"
            android:text="@string/dead_count_label"
            android:textAppearance="@style/TextAppearance.MOBDEVEMP.BodyLarger"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_live_count_label" />

        <TextView
            android:id="@+id/tv_total_count_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="8dp"
            android:text="@string/total_count_label"
            android:textAppearance="@style/TextAppearance.MOBDEVEMP.BodyLarger"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_dead_count_label" />

        <TextView
            android:id="@+id/tv_push_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="64dp"
            android:text="@string/push_label"
            android:textAppearance="@style/TextAppearance.MOBDEVEMP.BodyLarger"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_total_count_label" />

        <TextView
            android:id="@+id/tv_profile_feedback_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="16dp"
            android:text="@string/feedback_switch_label"
            android:textAppearance="@style/TextAppearance.MOBDEVEMP.BodyLarger"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_push_label" />

        <Switch
            android:id="@+id/switch_feedback"
            style="@style/Widget.MOBDEVEMP.Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="64dp"
            android:minWidth="48dp"
            android:minHeight="24dp"
            android:paddingEnd="0dp"
            android:switchPadding="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_profile_feedback_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_profile_feedback_label"
            tools:ignore="DuplicateClickableBoundsCheck,TouchTargetSizeCheck" />

        <Switch
            android:id="@+id/switch_push"
            style="@style/Widget.MOBDEVEMP.Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="64dp"
            android:minWidth="48dp"
            android:minHeight="24dp"
            android:paddingEnd="0dp"
            android:switchPadding="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_push_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_push_label"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btn_feedback"
            style="@style/Widget.MOBDEVEMP.TextButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:text="Send Feedback Now"
            app:layout_constraintEnd_toEndOf="@+id/switch_feedback"
            app:layout_constraintStart_toStartOf="@+id/tv_profile_feedback_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_profile_feedback_label"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btn_logout"
            style="@style/Widget.MOBDEVEMP.ButtonPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="64dp"
            android:paddingStart="24dp"
            android:paddingLeft="24dp"
            android:paddingEnd="24dp"
            android:paddingRight="24dp"
            android:text="@string/log_out_label"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_feedback"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="32dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
<!--            app:srcCompat="@drawable/ic_launcher_foreground" />-->
    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        layout="@layout/view_offline"
        android:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>