<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.activities.ProfileActivity">

    <ImageView
        android:id="@+id/iv_profile_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_dark" />

    <TextView
        android:id="@+id/tv_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/profile_name_placeholder"
        android:textAppearance="@style/TextAppearance.MOBDEVEMP.Headline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_profile_logo" />

    <TextView
        android:id="@+id/tv_profile_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="32dp"
        android:text="@string/profile_date_label"
        android:textAppearance="@style/TextAppearance.MOBDEVEMP.Body"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_profile_name" />

    <TextView
        android:id="@+id/tv_profile_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="80dp"
        android:text="@string/profile_date_placeholder"
        android:textAppearance="@style/TextAppearance.MOBDEVEMP.Body"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_profile_name" />

    <TextView
        android:id="@+id/tv_live_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="80dp"
        android:text="@string/count_placeholder"
        android:textAppearance="@style/TextAppearance.MOBDEVEMP.Body"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_profile_date" />

    <TextView
        android:id="@+id/tv_dead_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="80dp"
        android:text="@string/count_placeholder"
        android:textAppearance="@style/TextAppearance.MOBDEVEMP.Body"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_live_count" />

    <TextView
        android:id="@+id/tv_total_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="80dp"
        android:text="@string/count_placeholder"
        android:textAppearance="@style/TextAppearance.MOBDEVEMP.Body"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dead_count" />

    <TextView
        android:id="@+id/tv_live_count_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="8dp"
        android:text="@string/live_count_label"
        android:textAppearance="@style/TextAppearance.MOBDEVEMP.Body"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_profile_date_label" />

    <TextView
        android:id="@+id/tv_dead_count_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="8dp"
        android:text="@string/dead_count_label"
        android:textAppearance="@style/TextAppearance.MOBDEVEMP.Body"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_live_count_label" />

    <TextView
        android:id="@+id/tv_total_count_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="8dp"
        android:text="@string/total_count_label"
        android:textAppearance="@style/TextAppearance.MOBDEVEMP.Body"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_dead_count_label" />

    <TextView
        android:id="@+id/tv_push_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="64dp"
        android:text="@string/push_label"
        android:textAppearance="@style/TextAppearance.MOBDEVEMP.Body"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_total_count_label" />

    <TextView
        android:id="@+id/tv_profile_feedback_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="32dp"
        android:text="@string/feedback_switch_label"
        android:textAppearance="@style/TextAppearance.MOBDEVEMP.Body"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_push_label" />

    <Switch
        android:id="@+id/switch_feedback"
        style="@style/Widget.MOBDEVEMP.Switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:minWidth="48dp"
        android:minHeight="24dp"
        android:paddingEnd="0dp"
        android:switchPadding="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_profile_feedback_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_profile_feedback_label"
        tools:ignore="DuplicateClickableBoundsCheck,TouchTargetSizeCheck" />

    <Switch
        android:id="@+id/switch_push"
        style="@style/Widget.MOBDEVEMP.Switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:minWidth="48dp"
        android:minHeight="24dp"
        android:paddingEnd="0dp"
        android:switchPadding="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_push_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_push_label"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btn_feedback"
        style="@style/Widget.MOBDEVEMP.TextButton"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:text="Send Feedback Now"
        app:layout_constraintEnd_toEndOf="@+id/switch_feedback"
        app:layout_constraintStart_toStartOf="@+id/tv_profile_feedback_label"
        app:layout_constraintTop_toBottomOf="@+id/tv_profile_feedback_label"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btn_logout"
        style="@style/Widget.MOBDEVEMP.ButtonPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/log_out_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>