<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="48dp">

    <CheckBox
        android:id="@+id/checkbox_dashboard_plant"
        style="@style/Widget.MOBDEVEMP.CheckBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:maxLines="1"
        android:minHeight="32dp"
        android:paddingEnd="8dp"
        android:textAppearance="@style/TextAppearance.MOBDEVEMP.Body2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Checkbox" />

    <TextView
        android:id="@+id/tv_late"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle_16"
        android:backgroundTint="@color/light_gray"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="late"
        android:textAppearance="@style/TextAppearance.MOBDEVEMP.Body2"
        android:textColor="@color/primary_color"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/checkbox_dashboard_plant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/checkbox_dashboard_plant"
        app:layout_constraintTop_toTopOf="@+id/checkbox_dashboard_plant" />

</androidx.constraintlayout.widget.ConstraintLayout>