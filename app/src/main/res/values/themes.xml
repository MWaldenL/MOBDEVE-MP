<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MOBDEVEMP" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  Text  -->

    <style name="TextAppearance.MOBDEVEMP.Headline3" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/work_sans_bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="TextAppearance.MOBDEVEMP.Headline4" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/work_sans_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="TextAppearance.MOBDEVEMP.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/work_sans_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="TextAppearance.MOBDEVEMP.Body" parent="TextAppearance.AppCompat.Body2">
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.MOBDEVEMP.BodyLarger" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--  Widgets  -->

    <style name="TextAppearance.MOBDEVEMP.BadgeLight" parent="TextAppearance.MOBDEVEMP.Body">
        <item name="android:background">@drawable/rounded_rectangle_16</item>
        <item name="android:backgroundTint">@color/light_green</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="Widget.MOBDEVEMP.TextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/source_sans_pro</item>
    </style>

    <style name="Widget.MOBDEVEMP.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rounded_rectangle_8</item>
        <item name="backgroundTint">@color/light_gray</item>
        <item name="android:textAppearance">@style/TextAppearance.MOBDEVEMP.Body</item>
        <item name="minHeight">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="Widget.MOBDEVEMP.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="tint">@color/light_gray</item>
        <item name="fontFamily">@font/source_sans_pro</item>
    </style>

    <style name="Widget.MOBDEVEMP.IconBtnColorless" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/primary_color</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="Widget.MOBDEVEMP.IconBtn" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/rounded_rectangle_8</item>
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:padding">4dp</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Widget.MOBDEVEMP.IconBtnWhite" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/rounded_rectangle_8</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:padding">4dp</item>
        <item name="android:tint">@color/primary_color</item>
    </style>

    <style name="Widget.MOBDEVEMP.ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/rounded_rectangle_8</item>
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textAppearance">@style/TextAppearance.MOBDEVEMP.Body</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.MOBDEVEMP.TextBoxButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/rounded_rectangle_8</item>
        <item name="backgroundTint">@color/light_gray</item>
        <item name="android:textAppearance">@style/TextAppearance.MOBDEVEMP.Body</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="minHeight">48dp</item>
        <item name="elevation">0dp</item>
        <item name="paddingStart">16dp</item>
        <item name="paddingEnd">16dp</item>
    </style>

    <style name="Widget.MOBDEVEMP.ToggleBtn" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/toggle_text_color</item>
        <item name="android:background">@drawable/rounded_rectangle_8</item>
        <item name="backgroundTint">@color/toggle_color</item>
        <item name="android:textAppearance">@style/TextAppearance.MOBDEVEMP.Body</item>
    </style>

    <style name="Widget.MOBDEVEMP.ToggleBtnCircular" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/toggle_text_color</item>
        <item name="android:background">@drawable/rounded_rectangle_16</item>
        <item name="backgroundTint">@color/toggle_color</item>
    </style>

    <style name="Widget.MOBDEVEMP.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="tint">@color/light_gray</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.MOBDEVEMP.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="tint">@color/light_gray</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="Widget.MOBDEVEMP.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/checkbox_color</item>
    </style>

    <style name="Widget.MOBDEVEMP.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/widget_spinner</item>
    </style>

    <style name="Widget.MOBDEVEMP.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="elevation">0dp</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>
</resources>