<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MOBDEVEMP" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  Text  -->

    <style name="TextAppearance.MOBDEVEMP.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/work_sans_bold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextAppearance.MOBDEVEMP.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/source_sans_pro</item>
    </style>

    <!--  Widgets  -->

    <style name="Widget.MOBDEVEMP.TextView" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/source_sans_pro</item>
    </style>

    <style name="Widget.MOBDEVEMP.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/checkbox_color</item>
    </style>

    <style name="Widget.MOBDEVEMP.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="tint">@color/light_gray</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="Widget.MOBDEVEMP.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="elevation">0dp</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>
</resources>